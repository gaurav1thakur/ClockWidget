<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <!-- Brushes -->
    <SolidColorBrush x:Key="ClockFaceBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="HandBrush" Color="Black"/>
    <SolidColorBrush x:Key="FocusDotActiveBrush" Color="DeepSkyBlue"/>
    <SolidColorBrush x:Key="ClockHandBrush" Color="Black" />
    <SolidColorBrush x:Key="HourHandBrush" Color="Black" />
    <SolidColorBrush x:Key="MinuteHandBrush" Color="Black" />
    <SolidColorBrush x:Key="SecondHandBrush" Color="Red" />
    <SolidColorBrush x:Key="ClockTextBrush" Color="Black" /> <!-- White -->
    
    <DropShadowEffect x:Key="HandGlowEffect"
                  Color="Transparent"
                  BlurRadius="0"
                  ShadowDepth="0"
                  Opacity="0" />

    <DropShadowEffect x:Key="ClockTextGlow"
                  Color="Black"
                  BlurRadius="8"
                  ShadowDepth="0"
                  Opacity="0" />

    <!-- Theme-specific opacity -->
    <System:Double x:Key="ClockOpacity">1</System:Double>

</ResourceDictionary>