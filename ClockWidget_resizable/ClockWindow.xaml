<Window x:Class="ClockWidget.ClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid x:Name="ClockRoot"
        
        Width="{Binding TargetSize, RelativeSource={RelativeSource AncestorType=Window}}"
        Height="{Binding TargetSize, RelativeSource={RelativeSource AncestorType=Window}}"
        Opacity="{DynamicResource ClockOpacity}" >

        <Grid.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="25" Opacity="0.5"/>
        </Grid.Effect>



        <!-- Drawing surface (optional for future ticks) -->

        <Canvas x:Name="FaceCanvas" Background="Transparent"/>

        <!-- Circular progress for focus session -->
        <Path x:Name="ProgressArc"
          StrokeThickness="6"
          Stroke="#66FF9800"
          Fill="Transparent"
          StrokeStartLineCap="Round"
          StrokeEndLineCap="Round"/>
        
        <!-- Hands Second D32F2F 
        <Line x:Name="HourHand" Stroke="#444" StrokeThickness="4" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
        <Line x:Name="MinuteHand" Stroke="#444" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
        <Line x:Name="SecondHand" Stroke="#444" StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
        -->
        <TextBlock x:Name="DateText"
           FontSize="15"
           FontWeight="UltraLight"
           Foreground="{DynamicResource ClockTextBrush}"
           Effect="{DynamicResource ClockTextGlow}"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           TextWrapping="Wrap"
           TextAlignment="Center"
           Margin="0,20,0,0"
           Text="Tue 11"/>
        
        <Line x:Name="HourHand"
      Stroke="{DynamicResource HourHandBrush}"
      StrokeThickness="4"
      StrokeStartLineCap="Round"
      StrokeEndLineCap="Round"
      Effect="{DynamicResource HandGlowEffect}" />

        <Line x:Name="MinuteHand"
      Stroke="{DynamicResource MinuteHandBrush}"
      StrokeThickness="3"
      StrokeStartLineCap="Round"
      StrokeEndLineCap="Round"
      Effect="{DynamicResource HandGlowEffect}" />

        <Line x:Name="SecondHand"
      Stroke="{DynamicResource SecondHandBrush}"
      StrokeThickness="1.5"
      StrokeStartLineCap="Round"
      StrokeEndLineCap="Round"
      Effect="{DynamicResource HandGlowEffect}" />

        <!-- Center cap -->
        <Ellipse x:Name="CenterCap" Fill="#333" Width="8" Height="8"/>
    </Grid>
</Window>