<Application x:Class="ClockWidget.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >


    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ClockFaceBrush" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="ClockStrokeBrush" Color="#FF000000"/>
            <SolidColorBrush x:Key="HandBrush" Color="#FF000000"/>
            <SolidColorBrush x:Key="TickBrush" Color="#66000000"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkTheme.xaml" />
                <ResourceDictionary Source="Themes/LightTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>