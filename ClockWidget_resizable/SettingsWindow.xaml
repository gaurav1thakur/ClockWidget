<Window x:Class="ClockWidget.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Width="340" Height="270" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: Theme -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Opacity -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Dragging -->
            <RowDefinition Height="Auto"/>
            <!-- 3: Click-through -->
            <RowDefinition Height="Auto"/>
            <!-- 4: Focus Session -->
            <RowDefinition Height="*"/>
            <!-- 5: Overlay Mode -->
            <RowDefinition Height="Auto"/>
            <!-- 6: Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- 7: Buttons -->
        </Grid.RowDefinitions>

        <!-- Theme -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Theme:" Width="140" VerticalAlignment="Center"/>
            <ComboBox x:Name="ThemeComboBox" Width="150">
                <ComboBoxItem Content="Light"/>
                <ComboBoxItem Content="Dark"/>
            </ComboBox>
        </StackPanel> 

        <!-- Opacity -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Opacity:" Width="140" VerticalAlignment="Center"/>
            <Slider x:Name="OpacitySlider" Minimum="0.3" Maximum="1.0" TickFrequency="0.05" IsSnapToTickEnabled="True" Width="150"/>
        </StackPanel>

        <!-- Click-through -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,8">
            <TextBlock Text="Click-Through Mode:" Width="140" VerticalAlignment="Center"/>
            <CheckBox x:Name="ClickThroughCheckBox" Content=""/>
        </StackPanel>

        <!-- Overlay Mode-->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,0,0,8">
            <TextBlock Text="Overlay Mode:" Width="140" VerticalAlignment="Center"/>
            <CheckBox x:Name="OverlayModeCheckBox"  Content="" Margin="0,0,0,8"/>
        </StackPanel>

        <!-- Focus Session -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
            <TextBlock Text="Focus Duration (minutes):" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="FocusDurationBox" Width="60" Text="25"/>
            <Button x:Name="StartFocusButton" Content="Start" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" Content="Reset" Margin="0,0,8,0" Click="Reset_Click"/>
            <Button Width="90" Content="Close" Click="Close_Click"/>
        </StackPanel>

    </Grid>
</Window>
